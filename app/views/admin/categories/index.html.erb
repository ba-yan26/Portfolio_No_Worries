<h1>カテゴリ一覧・作成</h1>

<%= form_with model: @category, url: admin_categories_path, method: :post do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit "新規作成" %>
<% end %>

<% @categories.each do |category| %>
  <%= category.name %>
  <%= link_to "編集する", edit_admin_category_path(category) %><br>
<% end %>