<div class="sign-in-content">
  <div class="sign-in-shadow">
    <h2>ログイン</h2>
    
    <div class="sign-in">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, placeholder:"メールアドレス", autofocus: true, autocomplete: "email" %>
        </div>
      
        <div class="field">
          <%= f.password_field :password, placeholder:"パスワード", autocomplete: "current-password" %>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      
        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>
      
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
