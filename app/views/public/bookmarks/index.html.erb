<h4 class="main-title">ブックマーク</h4>

<div class="container">
  <div class="side-content">
    <%= render 'admin/categories/index', categories: @categories %>
  </div>

  <div class="main-content">
    <% @rooms.each do |room| %>
      <% if room.is_bookmarked_by?(current_end_user) %>
        <div class="room-content">
          <div class="room-list">
            <%= link_to room_path(room) do %>
              <%= room.title %><br>
              <span>投稿者：<%= room.end_user.name %></span>
            <% end %>
          </div>
          <div class="room-list">
            <i class="fas fa-comment-alt"></i>：<%= room.chats.count %>
          </div>
          <div class="room-list bookmark_btn_<%= room.id %>">
            <%= render 'public/bookmarks/bookmark', room: room %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>



