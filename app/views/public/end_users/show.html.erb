<h1 class="main-title">マイページ</h1>

<div class="container">
  <div class="side-content">
    <h5>プロフィール</h5>
    <p>名前：<%= @end_user.name %></p>
    <% if @end_user == current_end_user %>
      <p>メール：<%= @end_user.email %></p>
      <%= link_to "編集する", edit_end_user_path(@end_user) %>
    
      <div>
        <%= link_to "ブックマーク", bookmarks_path %>
      </div>
    <% else %>
      <%= link_to "通報する", new_notice_path %>
    <% end %>
  </div>

  <div class="main-content">
    <h5>投稿一覧</h5>
    <% @rooms.each do |room| %>
      <div class="room-content">
          <div class="room-list">
            <%= link_to room.title, room_path(room) %>
          </div>
      </div>
    <% end %>
  </div>
</div>



