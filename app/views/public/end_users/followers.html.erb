<div class="follow-content">
  <h4 class="main-title">
    <% if @end_user == current_end_user %>
      フォロワー
    <% else %>
      <%= @end_user.name %>さんのフォロワー
    <% end %>
  </h4>

  <% if @end_user.followers.present? %>
  <% @end_users.each do |end_user| %>
    <div class="follow-list">
      <div class="follow-side">
        <div class="follow-profile">
          <%= link_to end_user_path(end_user) do %>
            <%= image_tag end_user.get_profile_image, size:"40x40" %>
            <%= end_user.name %>
          <% end %>
        </div>
        <div class="follow-profile">
          <p><%= end_user.followings.count %> follow</p>
          <p><%= end_user.followers.count %> follower</p>
        </div>
      </div>
      <div class="follow-body">
        <% if end_user.body.present? %>
          <%= end_user.body %>
        <% else %>
          自己紹介文はありません
        <% end %>
      </div>
    </div>
  <% end %>
  <% else %>
    <p class="non_follow">まだフォロワーはいません</p>
  <% end %>
</div>