<div class="form-create">
  <div class="form-create-content">
    <h2>通報入力画面</h2>

    <%= @end_user.name %>さんを通報します

    <%= form_with model: @notice, url: end_user_notices_path, method: :post do |f| %>
      <div>
        <%= f.text_field :title, placeholder:"タイトルを入力してください" %>
      </div>
      <div>
        <%= f.text_area :body, placeholder:"詳細に入力してください" %>
      </div>
      <div>
        <label class="screenshot" for="form-image">スクリーンショット</label>
        <%= f.file_field :notice_image, accept: 'image/*', id:"form-image" %>
        <span class="select-image">選択されていません</span>
      </div>
      <div>
        <%= f.submit "送信" %>
      </div>
    <% end %>

  </div>
</div>
